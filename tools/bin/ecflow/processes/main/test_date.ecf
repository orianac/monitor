%include <qsub_build.h>
%include <head.h>
%manual
Check date to determine whether we will run forecast update
%end

echo "Today is $(date)"
day=$(date +%%-d)
#TODO move day check/event to a separate task

if [[ $day -eq 11 ]] ; then
    ecflow_client --event=download_fcst
elif [[ $day -eq 12 ]] ; then
    ecflow_client --event=run_fcst
else
    ecflow_client --event=skip_fcst
fi

%include <tail.h>
